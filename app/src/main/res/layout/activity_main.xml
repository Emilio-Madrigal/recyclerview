<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="100dp"
    android:paddingLeft="25dp"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_marginTop="100dp"
    android:layout_marginLeft="25dp">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/NombreE"
            android:textSize="20sp">

        </TextView>

        <EditText
            android:id="@+id/NEM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </EditText>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Puntos"
            android:textSize="20sp">

        </TextView>

        <EditText
            android:id="@+id/PEM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </EditText>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/JuegosJ"
            android:textSize="20sp">

        </TextView>

        <EditText
            android:id="@+id/JJEM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </EditText>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/JuegosG"
            android:textSize="20sp">

        </TextView>

        <EditText
            android:id="@+id/JGEM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </EditText>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/JuegosE"
            android:textSize="20sp">

        </TextView>

        <EditText
            android:id="@+id/JEEM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </EditText>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contacto"
            android:textSize="20sp">

        </TextView>

        <EditText
            android:id="@+id/NCEM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:onClick="guardardor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="guardar">
        </Button>
        <Button
            android:onClick="limpieza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limpiar">

        </Button>
        <Button
            android:onClick="ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver">

        </Button>

    </LinearLayout>


</LinearLayout>




</LinearLayout>
